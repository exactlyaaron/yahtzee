doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Yahtzee
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/pure-min.css')
    link(rel='stylesheet', href='http://yui.yahooapis.com/pure/0.5.0-rc-1/grids-responsive-min.css')
    link(rel='stylesheet', href='./css/app.css')
    link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css", rel="stylesheet")

  body

    #container
      h1 Yahtzee
      .pure-u-2-3#arrows
        i#up.arrow.fa.fa-arrow-circle-o-up.fa-3x
        i#down.arrow.fa.fa-arrow-circle-o-down.fa-3x
        i#left.arrow.fa.fa-arrow-circle-o-left.fa-3x
        i#right.arrow.fa.fa-arrow-circle-o-right.fa-3x

      .pure-g
        .pure-u-1form.pure-form
          fieldset
            input#username(type='text', placeholder='Username')
            input#avatar(type='text', placeholder='Avatar URL')

            button#add.pure-button.pure-button-primary.button-add Add

      .pure-g#dice
        .pure-u-1-2
          img.dice(src="/media/dice-1.png")
          img.dice(src="/media/dice-1.png")
          img.dice(src="/media/dice-1.png")
          img.dice(src="/media/dice-1.png")
          img.dice(src="/media/dice-1.png")
        .pure-u-1-2
          button.pure-button.button-success#roll Roll Dice

      .pure-g
        .pure-u-1form.pure-form
          fieldset
            input#score(type='text', placeholder='Add points')
            button#add-score.pure-button.pure-button-primary.button-add Add Score

      .pure-g
        .pure-u-1
          table#game.pure-table
            thead
              tr
                th Avatar
                th Name
                th 1
                th 2
                th 3
                th 4
                th 5
                th 6
                th 7
                th 8
                th 9
                th 10
                th 11
                th 12
                th 13
                th Total

            tbody


    script(src='./js/vendor/jquery-2.1.0.js')
    script(src='./js/source/main.js')
